<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tg.blog.backend.dao.CategoryMapper">
    <resultMap id="CategoryResultMap" type="com.tg.blog.backend.entity.Category">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="slug" column="slug" />
        <result property="description" column="description" />
        <result property="parentId" column="parent_id" />
    </resultMap>

    <resultMap id="CategoryDTOResultMap" type="com.tg.blog.backend.dto.CategoryDTO">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="slug" column="slug" />
        <result property="description" column="description" />
        <result property="parentId" column="parent_id" />
    </resultMap>

    <insert id="insert" parameterType="com.tg.blog.backend.entity.Category">
        INSERT INTO category (name, slug, description, parent_id)
        VALUES (#{name}, #{slug}, #{description}, #{parentId})
    </insert>

    <update id="update" parameterType="com.tg.blog.backend.entity.Category">
        UPDATE category SET
            name = #{name},
            slug = #{slug},
            description = #{description},
            parent_id = #{parentId}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM category WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="CategoryDTOResultMap" parameterType="long">
        SELECT id, name, slug, description, parent_id FROM category WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="CategoryDTOResultMap">
        SELECT id, name, slug, description, parent_id FROM category
    </select>
</mapper>
